        if(tokensCollectedBySale>swapableTokens)
        {
          uint256 initialBalance = address(this).balance;
          swapTokensForEth(swapableTokens);
          uint256 newBalance = address(this).balance.sub(initialBalance);
          transferToAddressETH(saleMarketingWalletAddress, newBalance);
          tokensCollectedBySale -= swapableTokens;
        }
    }

    function swapTokens(uint256 contractTokenBalance) private lockTheSwap 
    {   
        uint256 _totalFee = _liquidityFee.add(_marketingFee);
        uint256 halfLiquidityTokens = contractTokenBalance.div(_totalFee).mul(_liquidityFee).div(2);
        uint256 swapableTokens = contractTokenBalance.sub(halfLiquidityTokens);
        uint256 initialBalance = address(this).balance;
        swapTokensForEth(swapableTokens);
        uint256 newBalance = address(this).balance.sub(initialBalance);
        uint256 bnbForLiquidity = newBalance.div(_totalFee).mul(_liquidityFee).div(2); 
        addLiquidity(halfLiquidityTokens, bnbForLiquidity);
        emit SwapAndLiquify(halfLiquidityTokens, bnbForLiquidity, halfLiquidityTokens);
        transferToAddressETH(buyMarketingWalletAddress, newBalance.sub(bnbForLiquidity));
    }

   
    
